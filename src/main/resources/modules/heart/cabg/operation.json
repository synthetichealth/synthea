    "Emergency Check": {
      "type": "Simple",
      "conditional_transition": [
        {
          "transition": "On Pump Emergency CABG",
          "condition": {
            "condition_type": "Or",
            "conditions": [
              {
                "condition_type": "Attribute",
                "attribute": "operative_status",
                "operator": "==",
                "value": "emergent"
              },
              {
                "condition_type": "Attribute",
                "attribute": "operative_status",
                "operator": "==",
                "value": "emergent_salvage"
              }
            ]
          }
        },
        {
