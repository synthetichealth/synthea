      "reason": "Abnormal Findings",
      "complex_transition": [
        {
          "condition": {
            "condition_type": "Attribute",
            "attribute": "cabg_consultation_count",
            "operator": ">",
            "value": 0
          },
          "distributions": [],
          "transition": "End_Referral_Consultation"
        },
        {
          "distributions": [
