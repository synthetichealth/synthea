        },
        {
          "condition": {
            "condition_type": "Attribute",
            "attribute": "diabetic_retinopathy_stage",
            "operator": "==",
            "value": 1
          },
          "distributions": [
            {
              "distribution": 0.9915,
              "transition": "Set_Mild_Eye_Damage"
            },
            {
              "distribution": 0.0085,
              "transition": "Set_Moderate_Eye_Damage"
            }
          ],
          "remarks": [
            "Roughly 10% chance of DR progression per year == 0.85% chance per month",
